<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvPopularNewsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:lineSpacingMultiplier="2.25"
        android:text="@string/header"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Header" />

    <View
        android:id="@+id/view_bg"
        android:layout_width="22dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTitleUnderline"
        app:layout_constraintStart_toStartOf="@+id/tvPopularNewsHeader"
        app:layout_constraintTop_toBottomOf="@+id/tvPopularNewsHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>